<odoo>
  <data>


    <record model="ir.ui.view" id="estate_property_view_list">
      <field name="name">estate_property list</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="postcode"/>
          <field name="bedrooms"/>
        </tree>
      </field>
    </record>

  <record id="estate_property_view_form" model="ir.ui.view">
    <field name="name">estate.property.view.list</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="">
      <header>
        <field name="state" widget="statusbar" statusbar_visible="accepted, refused, new, open_order, closed_order, sold_order" options="{'clickable':'1'}"/>
      </header>
        <sheet>
        <div class="oe_title" colspan="4">
          <h1><field name="name"/></h1>
        </div>
          <group>
            <group>
                 <field name="property_type_id"/>
                 <field name="property_tag_ids" widget="many2many_tags"/>
                 <field name="postcode"/>
                 <field name="availability_from"/>
            </group>
            <group>
                <field name="expected_price"/>
                <field name="selling_price"/>
        </group>
        </group>

        <notebook>
          <page name="description" string="description">
            <group>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
            </group>
          </page>
          <page name="offers" string="Offers">
            <field name="property_offer_ids">
            <tree editable="bottom">
            <field name="price"/>
            <field name="partner_id"/>
            <field name="state"/>
            </tree>
            </field>

            
          </page>
        </notebook>

        </sheet>
      </form>
    </field>
  </record>

  <record id="estate_property_view_search" model="ir.ui.view">
    <field name="name">estate.property.view.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search string="">
        <field name="name"/>
        <field name="postcode"/>
        <field name="expected_price"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="facades"/>
        <filter name="state" string="available" domain="[('state', 'in', ['new', 'open_order'])]"/>
        <filter name="state" string="closed and sold order" domain="[('state', 'in', ['closed_order', 'sold_order'])]"/>
        <group>
          <filter name="postcode" string="postcode" context="{'group_by': 'postcode'}"/>
          <filter name="state" string="state"  context="{'group_by': 'state'}"/>
        </group>
      </search>
    </field>
  </record>



    <record model="ir.actions.act_window" id="estate_property_action_window">
      <field name="name">Properties</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- type -->
    <record model="ir.actions.act_window" id="estate_property_type_action_window">
      <field name="name">Properties Types</field>
      <field name="res_model">estate.property.type</field>
      <field name="view_mode">tree,form</field>
    </record>

     <!-- tag -->
    <record model="ir.actions.act_window" id="estate_property_tag_action_window">
      <field name="name">Properties Tags</field>
      <field name="res_model">estate.property.tag</field>
      <field name="view_mode">tree,form</field>
    </record>



    <menuitem name="Estate" id="estate_property_menu_root"/>
    <menuitem name="Advertaisment" id="estate_property_menu_1" action="estate_property_action_window" parent="estate_property_menu_root"/>
    <menuitem name="settings" id="estate_property_setting_menu_1"  parent="estate_property_menu_root"/>
    <menuitem name="Property Types" id="estate_property_type_menu_1" action="estate_property_type_action_window" parent="estate_property_setting_menu_1"/>
    <menuitem name="Property Tags" id="estate_property_tag_menu_1" action="estate_property_tag_action_window" parent="estate_property_setting_menu_1"/>

  
  </data>
</odoo>





